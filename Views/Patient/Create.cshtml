@model PatientViewModel
@{
    ViewData["Title"] = "Patient Page";
}

<div class="container p-0">
    <div class="row pt-2">
        <div class="col-8">
            <h2 class="text-primary">Patients</h2>
        </div>
        <div class="col-4">
            <h2 class="text-primary">Create new Patient</h2>
        </div>
        <br />

        <div class="col-8">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            IIN
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Surname
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            PhoneNumber
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.patients)
                    {
                        <tr>
                            <td width="20%">@item.IIN</td>
                            <td width="20%">@item.Name</td>
                            <td width="20%">@item.Surname</td>
                            <td width="20%">@item.Address</td>
                            <td width="20%">@item.PhoneNumber</td>
                            <td width="20%">
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-4">
            <br />
            <br />
            <div class="container" id="tohide">
                <form method="post" asp-action="Create">
                    <div class="border p-3">
                        @Html.ValidationSummary(true)
                        <div class="form-group row">
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label asp-for="patient.IIN"></label>
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="patient.IIN" class="form-control" />
                                        <span asp-validation-for="patient.IIN" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label asp-for="patient.Name"></label>
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="patient.Name" class="form-control" />
                                        <span asp-validation-for="patient.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label asp-for="patient.Surname"></label>
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="patient.Surname" class="form-control" />
                                        <span asp-validation-for="patient.Surname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label asp-for="patient.Address"></label>
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="patient.Address" class="form-control" />
                                        <span asp-validation-for="patient.Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label asp-for="patient.PhoneNumber"></label>
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="patient.PhoneNumber" class="form-control" />
                                        <span asp-validation-for="patient.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-8 row">
                                        <div class="col">
                                            <input type="submit" class="btn btn-info w-100" value="Create" />
                                        </div>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>